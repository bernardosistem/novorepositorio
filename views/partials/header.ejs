        /* Reset básico */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            padding-top: 0; /* Remover a compensação do cabeçalho */
            background-color: #f0f0f0;
            overflow-x: hidden;
        }

        /* Header fixo com transparência */
        header {
            z-index: 1000;
            transition: background-color 0.3s ease;
            background-color: transparent; /* Transparente por padrão */
            height: 150px;
        }

        header.fixed-top.scrolled {
            background-color: rgba(0, 0, 0, 0.7); /* Torna o fundo mais escuro ao rolar */
        }

        .nav-link {
            font-size: 1.3rem;
            margin-left: 1rem;
            transition: color 0.3s;
            position: relative;
            overflow: hidden; /* Para permitir a animação do fundo */
            color: #ffffff; /* Cor padrão do texto */
        }

        .nav-link:hover {
            color: #007bff; /* Destaque no hover */
        }

        .nav-link i {
            margin-right: 0.5rem;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 123, 255, 0.5); /* Cor azul clara */
            transform: translateY(-100%); /* Começa fora da tela */
            transition: transform 0.3s ease; /* Transição suave */
            z-index: 0; /* Fica atrás do texto */
        }

        .nav-link:hover::before {
            transform: translateY(0); /* Move para a posição visível */
        }

        .nav-link:hover {
            color: #ffffff; /* Mantém a cor do texto ao passar o mouse */
        }

        .nav-link i {
            transition: transform 0.3s; /* Transição suave para ícones */
        }

        .nav-link:hover i {
            transform: scale(1.2); /* Aumenta o ícone ao passar o mouse */
        }

        /* Estilização dos Dropdowns */
        .dropdown-menu {
            background-color: rgba(0, 0, 0, 0.8); /* Fundo escuro e transparente */
            border-radius: 0.5rem; /* Bordas arredondadas */
            transition: all 0.3s ease; /* Transição suave */
        }

        .dropdown-item {
            color: #ffffff; /* Cor do texto */
            transition: background-color 0.3s, transform 0.3s; /* Transição suave para o fundo e transformação */
        }

        .dropdown-item:hover {
            background-color: rgba(0, 123, 255, 0.5); /* Cor ao passar o mouse */
            transform: scale(1.05); /* Leve aumento no item */
        }

        .dropdown-item i {
            margin-right: 0.5rem; /* Espaçamento entre ícone e texto */
            transition: transform 0.3s; /* Transição suave para ícones */
        }

        .dropdown-item:hover i {
            transform: scale(1.2); /* Aumenta o ícone ao passar o mouse */
        }

        /* Hero section com vídeo */
        .hero {
            position: relative;
            overflow: hidden;
            height: 100vh;
            bottom: 70px;
            height: 100vh; /* Ajusta a altura do vídeo para ocupar o espaço disponível */
            margin-bottom: -100px; 
        }

       /* Ajuste do vídeo para garantir que cobre toda a área */
.hero video {
    min-width: 100%;
    min-height: 100%;
    object-fit: cover;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    /* Adiciona uma largura mínima para garantir que cubra toda a área */
    width: 100vw;
    height: 100vh;
}

        .hero .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 2;
        }

        .container {
            position: relative;
            z-index: 3;
        }

        h1.display-1 {
            font-size: 5rem;
            font-weight: 800;
            text-transform: uppercase;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
