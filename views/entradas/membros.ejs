<%- include('../partials/header2.ejs'); %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.6/lottie.min.js"></script>
<style>
 body {
    font-family: 'Poppins', sans-serif; /* Fonte moderna e limpa */
    margin: 0;
    padding: 20px;
    background: linear-gradient(to bottom, #6b78ff, #ffffff); /* Gradiente suave */
    color: #333; /* Cor de texto padrão */
}

.header {
    text-align: left;
    margin-bottom: 20px;
}

h2 {
    margin: 0; /* Remove margens padrão do título */
    font-size: 3.5rem; /* Aumenta o tamanho do título */
    color: #003d7a; /* Cor do texto do título */
    background-color: #e1eaff; /* Fundo suave com leve gradiente */
    padding: 20px; /* Espaçamento interno */
    border-radius: 10px; /* Bordas arredondadas */
    box-shadow: 0 4px 20px rgba(0, 61, 122, 0.2); /* Sombra profunda */
    transition: all 0.3s ease; /* Efeito de transição suave */
}

h2:hover {
    transform: translateY(-5px) scale(1.02); /* Efeito de elevação ao passar o mouse */
    color: #0056b3; /* Muda a cor ao passar o mouse */
}

.underline {
    height: 5px;
    width: 120px;
    background-color: #0056b3; /* Cor da sublinha */
    margin: 10px 0;
    border-radius: 5px; /* Bordas arredondadas na sublinha */
}

.container {
    display: flex; /* Usar Flexbox para layout */
    flex-direction: row; /* Alinha itens na horizontal */
    align-items: flex-start; /* Alinha itens no início */
    gap: 40px; /* Espaçamento entre itens */
    margin-top: 30px;
}

#lottie-animation {
    width: 100%; /* Define a largura total para a animação */
    max-width: 480px; /* Tamanho máximo da animação */
    margin: 0 auto; /* Centraliza a animação */
    border-radius: 15px; /* Bordas arredondadas na animação */
    /* Sombra removida conforme solicitado */
}

.container-form {
    flex: 1; /* O formulário ocupará o restante do espaço */
    background-color: #ffffff; /* Fundo do formulário */
    padding: 30px; /* Espaçamento interno do formulário */
    border-radius: 20px; /* Bordas arredondadas */
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15); /* Sombra do formulário */
    transition: all 0.3s ease; /* Efeito de transição suave */
}

.container-form:hover {
    transform: translateY(-5px); /* Elevação ao passar o mouse */
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25); /* Aumenta a sombra ao passar o mouse */
}

.contact-form {
    display: flex;
    flex-direction: column; /* Alinha os campos em coluna */
    gap: 25px; /* Espaçamento entre campos */
}

.form-row {
    display: flex; /* Usar Flexbox para os campos do formulário */
    justify-content: space-between; /* Alinha os campos nas extremidades */
    flex-wrap: wrap; /* Permite que os campos quebrem a linha em telas pequenas */
}

.input-field {
    flex: 1; /* O campo ocupa o espaço disponível */
    min-width: 200px; /* Largura mínima para garantir visibilidade em telas pequenas */
    margin-right: 15px; /* Espaçamento à direita */
}

.input-field:last-child {
    margin-right: 0; /* Remove margem do último campo */
}

.upload-button {
    display: flex;
    align-items: center;
    background-color: #6c63ff; /* Cor de fundo do botão */
    color: #fff;
    padding: 15px; /* Aumenta o espaçamento */
    border-radius: 10px; /* Bordas arredondadas */
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s; /* Efeito de transição */
    font-size: 1.1rem; /* Aumenta o tamanho do texto */
}

.upload-button:hover {
    background-color: #575757; /* Cor ao passar o mouse */
    transform: scale(1.05); /* Aumenta o botão ao passar o mouse */
}

.preview-image {
    margin-top: 10px;
    border-radius: 50%; /* Corta a imagem em formato circular */
    width: 140px; /* Tamanho da pré-visualização */
    height: 140px; /* Tamanho da pré-visualização */
    object-fit: cover; /* Corta a imagem corretamente */
    border: 4px solid #6c63ff; /* Borda na imagem */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Sombra na imagem */
}

input, select {
    padding: 15px; /* Aumenta o espaçamento interno nos campos */
    border-radius: 10px; /* Bordas arredondadas */
    border: 1px solid #cfd8dc; /* Borda leve */
    transition: border-color 0.3s, box-shadow 0.3s; /* Efeito de transição */
}

input:focus, select:focus {
    border-color: #6c63ff; /* Cor da borda ao focar */
    outline: none; /* Remove contorno padrão */
    box-shadow: 0 0 5px rgba(108, 99, 255, 0.5); /* Sombra ao focar */
}

button {
    background-color: #0056b3; /* Cor do botão */
    color: white;
    padding: 15px; /* Aumenta o espaçamento */
    border: none;
    border-radius: 10px; /* Bordas arredondadas */
    cursor: pointer;
    font-size: 1.1rem; /* Aumenta o tamanho do texto do botão */
    transition: background-color 0.3s, transform 0.2s; /* Efeito de transição */
}

button:hover {
    background-color: #003d7a; /* Cor ao passar o mouse */
    transform: scale(1.05); /* Aumenta o botão ao passar o mouse */
}

/* Estilos responsivos */
@media (max-width: 768px) {
    .container {
        flex-direction: column; /* Alinha itens na vertical */
    }

    h2 {
        font-size: 2.5rem; /* Diminui o tamanho do título */
    }

    #lottie-animation {
        width: 100%; /* Mantém a largura total */
        max-width: 350px; /* Ajusta o tamanho máximo para dispositivos menores */
    }

    button {
        font-size: 0.9rem; /* Diminui o tamanho do texto do botão */
    }
}

@media (max-width: 576px) {
    h2 {
        font-size: 2rem; /* Diminui ainda mais o tamanho do título */
    }

    input, select {
        min-width: 100%; /* Garantindo que os campos preencham o espaço disponível */
    }

    button {
        font-size: 0.8rem; /* Tamanho do botão ainda menor */
    }
}

</style>
</head>
<body>
    <div style="margin-top: 200px;" class="header">
        <h2>CADASTRO DE MEMBRO</h2>
        <div class="underline"></div>
        <p>Preencha o formulário abaixo para cadastrar um novo membro na plataforma.</p>
    </div>

    <div class="container">
        <div id="lottie-animation"></div>
        <div class="container-form">
            <form class="contact-form" action="/membros" method="POST" enctype="multipart/form-data">
                <!-- Botão de upload de foto -->
                <div class="form-row">
                    <label class="upload-button">
                        <i class="bi bi-upload"></i> Carregar Foto
                        <input type="file" name="foto_membro" id="foto" accept="image/*" style="display: none;">
                    </label>
                    <img id="preview" class="preview-image" style="display: none;">
                </div>
                <!-- Outros campos -->
                <div class="form-row">
                    <label for="">Membro Número</label>
                    <input type="text" name="numero_membro" value="<%= proximoNumeroMembro %>" placeholder="Número de Membro" required>
                </div>
                <div class="form-row">
                    <input type="text" name="nome" placeholder="Nome do Membro" required>
                </div>
                <div class="form-row">
                    <label for="">Data de nascimento</label>
                    <input type="date" name="data_nascimento" placeholder="Data de Nascimento" required>
                    <select name="estado_civil">
                        <option value="">Estado Civil</option>
                        <option value="solteiro">Solteiro</option>
                        <option value="casado">Casado</option>
                        <option value="viuvo">Víuvo</option>
                        <option value="divorsiado">Divorsiado</option>
                    </select>
                </div>
                <div class="form-row">
                    <input type="text" name="nacionalidade" placeholder="Nacionalidade" required>
                    <input type="text" name="naturalidade" placeholder="Naturalidade" required>
                </div>
                <div class="form-row">
                    <input type="text" name="provincia" placeholder="Província" required>
                    <input type="text" name="bi" placeholder="BI" required>
                </div>
                <div class="form-row">
                    <label for="">Data de emissão do BI</label>
                    <input type="date" name="data_admissao_bi" placeholder="Data de Admissão BI" required>
                    <input type="text" name="local_emissao_bi" placeholder="Local de Emissão BI" required>
                </div>
                <div class="form-row">
                    <select name="genero">
                        <option value="">Gênero</option>
                        <option value="masculino">Masculino</option>
                        <option value="feminino">Feminino</option>
                    </select>
                </div>
                <button type="submit">continuar</button>
            </form>
        </div>
    </div>
    
    <script>
        var animation = lottie.loadAnimation({
            container: document.getElementById('lottie-animation'),
            path: '/img/user.json',
            renderer: 'svg',
            loop: true,
            autoplay: true,
        });
    
        // Transição do formulário
        window.addEventListener('load', function () {
            document.querySelector('.container-form').classList.add('show');
        });
    
        // Pré-visualização da foto
        const fotoInput = document.getElementById('foto');
        const previewImage = document.getElementById('preview');
    
        fotoInput.addEventListener('change', function() {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    previewImage.src = event.target.result;
                    previewImage.style.display = 'block'; // Exibe a imagem
                };
                reader.readAsDataURL(file);
            } else {
                previewImage.style.display = 'none'; // Oculta a imagem se nenhum arquivo for selecionado
            }
        });
    </script>
</body>
