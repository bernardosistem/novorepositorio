<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crescimento das Cuotas</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f8f9fa; /* Cor de fundo clara */
            padding: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        #graficoCuotas {
            max-width: 800px; /* Largura máxima do gráfico */
            margin: 0 auto; /* Centraliza o gráfico */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Crescimento das Cuotas por Mês</h1>
        <canvas id="graficoCuotas" width="600" height="400"></canvas>

        <script>
            document.addEventListener('DOMContentLoaded', (event) => {
                // Passa os dados do EJS para o JavaScript
                const meses = <%= JSON.stringify(meses) %>;
                const totais = <%= JSON.stringify(totais) %>;

                // Cria o gráfico
                const ctx = document.getElementById('graficoCuotas').getContext('2d');
                const graficoCuotas = new Chart(ctx, {
                    type: 'line', // Tipo de gráfico (pode ser 'bar', 'line', etc.)
                    data: {
                        labels: meses,
                        datasets: [{
                            label: 'Total de Cuotas',
                            data: totais,
                            borderColor: 'rgba(75, 192, 192, 1)',
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            });
        </script>
    </div>
</body>
</html>
