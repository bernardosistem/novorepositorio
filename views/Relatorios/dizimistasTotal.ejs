<%- include('../partials/header2.ejs'); %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<title>Relatório de Dízimos - Membro</title>
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(to bottom right, #6b78ff, #ffffff);
        margin: 0;
        padding: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        color: #333;
    }

    .report-container {
        margin-top: 200px;
        max-width: 1000px;
        width: 100%;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 40px;
        border: none;
        overflow: hidden;
    }

    h1, h2, h3 {
        color: #0033aa;
        font-weight: 700;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #0033aa;
        padding-bottom: 10px;
        font-size: 1.5rem;
    }

    .icon {
        margin-right: 10px;
        font-size: 1.8rem;
        color: #0033aa;
    }

    .data-row {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 30px;
    }

    .data-point {
        background: #f0f4ff;
        border-left: 6px solid #0033aa;
        border-radius: 8px;
        padding: 20px;
        flex: 1;
        min-width: 45%;
        display: flex;
        align-items: center;
        color: #003366;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        cursor: pointer;
    }

    .data-point:hover {
        background-color: #e0f0ff;
        border-left-color: #0056e3;
        transform: translateY(-2px);
    }

    .data-point i {
        margin-right: 12px;
        font-size: 1.6rem;
    }

    .divider {
        border-top: 1px dashed #cccccc;
        margin: 30px 0;
        opacity: 0.7;
    }

    /* Responsividade */
    @media (max-width: 768px) {
        .report-container {
            padding: 20px;
        }

        h1, h2, h3 {
            font-size: 1.2rem;
        }

        .data-row {
            flex-direction: column;
        }

        .data-point {
            min-width: 100%;
        }
    }
</style>
</head>
<body>
    
<div class="report-container">
    <h1><i class="bi bi-file-earmark-text icon"></i> Relatório de Dízimos - Membro</h1>

    <% if (sem_dados) { %>
        <div class="alert alert-warning" role="alert">
            Nenhum dízimo encontrado para o membro <%= nome %> no período selecionado.
        </div>
    <% } else { %>
        <div class="data-row">
            <div class="data-point"><i class="bi bi-person-circle"></i> Nome Completo: <%= nome %></div>
            <div class="data-point"><i class="bi bi-card-text"></i> Número de Membro: <%= numero_membro %></div>
        </div>

        <div class="data-row">
            <div class="data-point"><i class="bi bi-calendar"></i> Data de Nascimento: <%= data_nascimento %></div>
            <div class="data-point"><i class="bi bi-telephone"></i> Contato: <%= contato %></div>
        </div>

        <div class="divider"></div>

        <h2><i class="bi bi-cash"></i> Dados Financeiros</h2>

        <div class="data-row">
            <div class="data-point"><i class="bi bi-wallet"></i> Total de Dízimos Recebidos: Kz <%= total_dizimos.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %></div>
            <div class="data-point"><i class="bi bi-check-circle"></i> Número de Contribuições: <%= numero_contribuicoes %></div>
        </div>

        <div class="data-row">
            <div class="data-point"><i class="bi bi-graph-up"></i> Média de Dízimos por Contribuição: Kz <%= media_dizimos.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %></div>
            <div class="data-point"><i class="bi bi-calendar-check"></i> Última Contribuição: Kz <%= ultima_contribuicao_valor.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %> em <%= ultima_contribuicao_data %></div>
        </div>

        <div class="divider"></div>

        <h3><i class="bi bi-list-ul"></i> Resumo do Relatório</h3>
        <div class="data-row">
            <div class="data-point"><i class="bi bi-currency-dollar"></i> Total Geral: Kz <%= total_geral.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %></div>
            <div class="data-point"><i class="bi bi-arrow-bar-right"></i> Comparação Anual: <%= comparacao_anual %></div>
        </div>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
            