        <div class="row">
            <div class="col s12 m4">
                <h4>Selecione um Estilo</h4>
                <div class="card-panel layout1" onclick="aplicarEstilo('layout1')">
                    <span>Layout 1</span>
                </div>
                <div class="card-panel layout4" onclick="aplicarEstilo('layout4')">
