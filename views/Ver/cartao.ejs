                            <div class="col s8">
                                <p><i class="material-icons icon">person</i> <strong>Nome:</strong> <%= membro.nome %></p>
                                <p><i class="material-icons icon">category</i> <strong>Categoria:</strong> <%= dadosEclesiais.categoria %></p>
                            </div>
