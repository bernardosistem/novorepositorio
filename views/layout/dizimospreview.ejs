<%- include('../partials/header2.ejs'); %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<style>
    body {
        background-color: #f0f2f5;
    }
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
        margin: 40px 0;
    }
    .custom-card, .custom-link-card {
        width: 380px;
        padding: 30px;
        border-radius: 15px;
        border: none;
        background-color: #ffffff;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        text-decoration: none;
        color: inherit;
    }
    .custom-link-card:hover {
        transform: scale(1.1);
        box-shadow: 0 14px 28px rgba(0, 0, 0, 0.2);
        border-left: 5px solid #0d6efd;
    }
    .icon {
        font-size: 45px;
        color: #0d6efd;
        margin-bottom: 20px;
    }
    .card-title {
        font-size: 24px;
        font-weight: bold;
        color: #0d6efd;
        margin-bottom: 15px;
    }
    .card-text {
        font-size: 16px;
        color: #0d6efd;
    }
    .form-container {
        margin-top: 40px;
        background-color: #ffffff;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }
    .form-title {
        font-size: 24px;
        font-weight: bold;
        color: #0d6efd;
        margin-bottom: 20px;
    }
    .form-icon {
        font-size: 20px;
        margin-right: 10px;
        color: #0d6efd;
    }
</style>
</head>
<body>
    <div style="margin-top: 200px;" class="container">
        <div class="card-container">
            <!-- Cartões existentes -->
            <div class="custom-card">
                <div class="icon"><i class="bi bi-cash-stack"></i></div>
                <h5 class="card-title">Total de Dízimos</h5>
                <p class="card-text">Kz <%= totalDizimos.toFixed(2) %></p>
            </div>
            <div class="custom-card">
                <div class="icon"><i class="bi bi-calendar-check"></i></div>
                <h5 class="card-title">Total de Dízimos Este Ano</h5>
                <p class="card-text">Kz <%= totalDizimosAno.toFixed(2) %></p>
            </div>
            <div class="custom-card">
                <div class="icon"><i class="bi bi-piggy-bank-fill"></i></div>
                <h5 class="card-title">Total de Despesas em Dízimos</h5>
                <p class="card-text">Kz <%= totalDespesasAno.toFixed(2) %></p>
            </div>
            <div class="custom-card">
                <div class="icon"><i class="bi bi-pie-chart-fill"></i></div>
                <h5 class="card-title">Dízimos Restantes</h5>
                <p class="card-text">Kz <%= dizimosRestantes.toFixed(2) %></p>
            </div>
            <a href="/dizimos-dashboard" class="custom-link-card">
                <div class="icon"><i class="bi bi-bar-chart"></i></div>
                <h5 class="card-title">Gráfico de Dízimos por Mês</h5>
                <p class="card-text">Gráfico mostrando os dízimos arrecadados mensalmente.</p>
            </a>
            <a href="/grafico-dizimo-dizimista" class="custom-link-card">
                <div class="icon"><i class="bi bi-people-fill"></i></div>
                <h5 class="card-title">Desempenho dos Dizimistas</h5>
                <p class="card-text">Desempenho dos dizimistas ao longo do tempo.</p>
            </a>
            <a href="/dizimos-tabela" class="custom-link-card">
                <div class="icon"><i class="bi bi-table"></i></div>
                <h5 class="card-title">Tabela de Últimos Dizimistas</h5>
                <p class="card-text">Lista dos últimos dizimistas registrados.</p>
            </a>
        
          
        </div>
        
        <!-- Formulário Atraente -->
        <div class="form-container">
            <h5 class="form-title">Relatório de Dízimos</h5>
          

            <form action="/dizimos/total" method="POST">
                <div class="mb-3">
                    <label for="periodo" class="form-label">
                        <i class="form-icon bi bi-calendar"></i>
                        Selecione o Período
                    </label>
                    <select name="periodo" class="form-select" id="periodo" required>
                        <option value="" disabled selected>Escolha um período...</option>
                        <option value="dia">Dia</option>
                        <option value="semana">Semana</option>
                        <option value="mes">Mês</option>
                        <option value="trimestre">Trimestre</option>
                        <option value="ano">Ano</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="dizimista" class="form-label">
                        <i class="form-icon bi bi-person"></i>
                        Clique para gerar o relatório
                    </label>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Gerar Relatório
                </button>
                <button type="button" class="btn btn-secondary" id="incluir-despesas">
                    <i class="bi bi-plus-circle"></i> Incluir Despesas
                </button>
                <input type="hidden" name="despesa_inserida" id="despesa-inserida" value="">
            </form>
            
            <script>
                document.getElementById('incluir-despesas').addEventListener('click', function() {
                    document.getElementById('despesa-inserida').value = 'despesa inserida';
                    alert('Despesas incluídas!'); // Para feedback ao usuário
                });
            </script>
            


        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
