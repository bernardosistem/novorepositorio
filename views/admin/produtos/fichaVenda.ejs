<%- include('../../partials/header.ejs');%>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
          
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            width: 100%;
            max-width: 600px;
            background: #ffffff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            font-size: 14px;
            color: #333;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }
        .header h1 {
            margin: 0;
            font-size: 24px;
            color: #007bff;
        }
        .header p {
            margin: 5px 0;
            font-size: 14px;
            color: #555;
        }
        .details {
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #ddd;
        }
        .details p {
            margin: 5px 0;
            font-size: 14px;
            color: #333;
        }
        .products {
            margin-top: 10px;
        }
        .products h2 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #007bff;
            display: flex;
            align-items: center;
        }
        .products h2 i {
            margin-right: 8px;
        }
        .product-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #eee;
        }
        .product-row:last-child {
            border-bottom: none;
        }
        .product-name {
            flex: 3;
            font-size: 14px;
            color: #333;
        }
        .product-quantity, .product-price, .product-total {
            flex: 1;
            text-align: right;
            font-size: 14px;
            color: #333;
        }
        .product-price, .product-total {
            font-weight: bold;
        }
        .price-title, .total-title {
            font-size: 12px;
            color: #007bff;
            margin-bottom: 2px;
            font-weight: bold;
        }
        .summary {
            margin-top: 20px;
            padding-top: 10px;
            border-top: 1px solid #ddd;
        }
        .summary h2 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #007bff;
            display: flex;
            align-items: center;
        }
        .summary h2 i {
            margin-right: 8px;
        }
        .summary .total-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            font-size: 16px;
            font-weight: bold;
            color: #007bff;
            border-top: 1px solid #007bff;
            margin-top: 10px;
        }
        .summary .total-row p {
            margin: 0;
        }
        .buttons {
            margin-top: 20px;
            text-align: center;
        }
        .buttons button {
            background-color: #007bff;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-size: 14px;
            margin: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }
        .buttons button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
        .buttons .btn-print {
            background-color: #28a745;
        }
        .buttons .btn-print:hover {
            background-color: #218838;
        }
        .buttons .btn-share {
            background-color: #17a2b8;
        }
        .buttons .btn-share:hover {
            background-color: #138496;
        }
        .footer {
            text-align: center;
            margin-top: 15px;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Recibo de Compra</h1>
            <p>Data: <%= new Date().toLocaleDateString() %></p>
        </div>
        <div class="details">
            <p><strong>Nome:</strong> <%= venda.cliente %></p>
            <p><strong>NIF:</strong> <%= venda.nif %></p>
        </div>
        <div class="products">
            <h2><i class="fas fa-box"></i> Produtos Comprados</h2>
            <% produtos.forEach(produto => { %>
                <div class="product-row">
                    <div class="product-name"><%= produto.nome %></div>
                    <div class="product-quantity">
                        <div class="price-title">Qtd</div>
                        <%= produto.quantidade %>
                    </div>
                    <div class="product-price">
                        <div class="price-title">Preço Unit.</div>
                        Kz <%= produto.preco.toFixed(2) %>
                    </div>
                    <div class="product-total">
                        <div class="price-title">Total</div>
                        Kz <%= produto.totalProduto.toFixed(2) %>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="summary">
            <h2><i class="fas fa-calculator"></i> Resumo</h2>
            <div class="total-row">
                <p>Total Gasto:</p>
                <p>Kz <%= totalGasto.toFixed(2) %></p>
            </div>
        </div>
        
        <div class="footer">
            Obrigado por sua compra!
        </div>

        
    </div>

    <div class="buttons">
    <button onclick="window.print()" class="btn-print"><i class="fas fa-print"></i> Imprimir</button>
    <button onclick="shareReceipt()" class="btn-share"><i class="fas fa-share-alt"></i> Compartilhar</button>
</div>

    <script>
        function shareReceipt() {
            // Implementar a lógica para compartilhar a ficha.
            // Pode usar a API de compartilhamento do navegador ou outras técnicas.
            alert("Função de compartilhamento não implementada.");
        }
    </script>
</body>

<%- include('../../partials/footer.ejs');%>