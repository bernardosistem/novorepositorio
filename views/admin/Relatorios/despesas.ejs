#searchInput:focus {
  border-color: #007bff; /* Cor da borda ao focar */
  box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25); /* Sombra mais intensa ao focar */
  outline: none; /* Remove o contorno padr√£o */
  transform: scale(1.02); /* Leve aumento ao focar */
}

#searchInput::before {
  content: 'üîç'; /* √çcone de lupa como marcador */
  position: absolute;
  top: 50%;
  right: 1.25rem; /* Espa√ßamento √† direita */
  transform: translateY(-50%); /* Centraliza verticalmente */
  color: #007bff; /* Cor do √≠cone */
  font-size: 1.25rem; /* Tamanho do √≠cone */
  pointer-events: none; /* N√£o permite intera√ß√£o com o √≠cone */
}

.search-container {
  position: relative; /* Para posicionar o √≠cone dentro do cont√™iner */
  max-width: 500px; /* Largura m√°xima para manter o design responsivo */
