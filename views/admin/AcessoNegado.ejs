<%- include('../partials/header.ejs'); %>


<style>
    .card {
        position: relative;
        top: -60px;
        border-radius: 20px;
        box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.2); /* Adicionado efeito de sombra */
        background: linear-gradient(135deg, #00203f, #005792, #0086bf, #00b4d8);
        color: white;
        padding: 40px;
    }

    .form-check-input {
        width: 25px;
        height: 25px;
        margin-right: 15px;
        border-radius: 5px;
        background-color: #00203f; /* Alterado para a cor desejada */
    }

    .form-check-label {
        font-size: 22px; /* Aumentado o tamanho do texto */
        transition: transform 0.4s ease;
        display: block;
        margin-bottom: 15px; /* Aumentado o espaçamento entre os tópicos */
        color: #62a0df; /* Alterado para a cor desejada */
    }

    .form-check-input:checked + .form-check-label {
        animation: bounce 0.4s ease;
        color: #00bf72;
        border: 2px solid #00bf72;
    }

    .form-check-input{
        border-radius :50% !important;
    }
/* Adicione este código ao seu arquivo de estilos CSS */

@keyframes rock {
    0% { transform: rotate(0deg); }
    50% { transform: rotate(5deg); }
    100% { transform: rotate(0deg); }
}

.form-check-label.selected {
    animation: rock 0.4s ease;
}

    .form-check.selected {
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3); /* Adicionado efeito de sombra */
    }

    .btn-primary {
        background-color: #00b4d8;
        border: none;
        color: white;
        padding: 15px 30px;
        text-align: center;
        font-size: 20px;
        border-radius: 30px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0d5574;
    }

    h1{
        text-align: center;
        margin-bottom: 30px;
        color: #fff;
        font-size: 40px;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        animation: fadeInDown 1s ease-out;
    }

    legend{

        text-align: center;
        margin-bottom: 30px;
        color: #fff;
        font-size: 20px;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        animation: fadeInDown 1s ease-out;

    }

    p{
        text-align: center;
        margin-bottom: 30px;
        color: #fff;
        font-size: 20px;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        animation: fadeInDown 1s ease-out;
    }

    .fa-sad-tear{
        color: red;
        font-size: 80px !important;
        position: relative;
        left: 320px !important;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-5">
                <div class="card-body">
                    <i class="far fa-sad-tear"></i> <br> <br>
                    <h1 class="text-center mb-4">Acesso Negado!</h1>
                    <hr>
                    <form action="/processar-selecao-topicos" method="POST">
                       <p>Para acessar esta página, é necessário iniciar uma sessão.</p>
                        <div class="text-center mt-4">
                            <a href="/perfil-user" class="btn btn-primary" type="submit">Iniciar Sessão <i class="fas fa-sign-in-alt"></i></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const checkboxes = document.querySelectorAll('.form-check-input');
    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('click', () => {
            checkbox.nextElementSibling.classList.toggle('selected');
        });
    });
</script>

