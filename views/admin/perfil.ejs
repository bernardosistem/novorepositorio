<style>
/* Geral */
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #f0f2f5;
  color: #333;
  line-height: 1.6;
}

.custom-profile-page {
  padding: 30px;
  max-width: 1200px;
  margin: 0 auto;
}

.custom-jumbotron {
  border-radius: 20px;
  padding: 2rem;
  margin-bottom: 2rem;
  background: linear-gradient(135deg, #4e54c8, #8f94fb);
  color: #fff;
  text-align: center;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.custom-jumbotron h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
  font-weight: 700;
  position: relative;
}

.custom-jumbotron p {
  font-size: 1.25rem;
  margin: 0;
}

.custom-jumbotron::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 20px;
  z-index: 0;
}

.custom-profile-card {
  background-color: #fff;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  margin: 0 auto;
  max-width: 800px;
  padding: 30px;
  text-align: center;
  border: 1px solid #e0e0e0;
  position: relative;
  overflow: hidden;
  transition: box-shadow 0.4s ease, transform 0.4s ease;
}

.custom-profile-card:hover {
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
  transform: scale(1.03);
}

.custom-profile-card-title {
  font-size: 2rem;
  margin-bottom: 1rem;
  color: #333;
  font-weight: 700;
  position: relative;
}

.custom-card-text {
  font-size: 1.2rem;
  margin-bottom: 0.75rem;
  color: #666;
}

.custom-profile-card-footer {
  margin-top: 2rem;
}

.custom-btn-success {
  font-size: 1.2rem;
  padding: 0.8rem 1.6rem;
  border-radius: 50px;
  background-color: #28a745;
  border: none;
  color: #fff;
  text-transform: uppercase;
  transition: background-color 0.3s ease, transform 0.2s ease;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.custom-btn-success:hover {
  background-color: #218838;
  transform: scale(1.05);
}

.custom-btn-success i {
  margin-right: 0.5rem;
}

.custom-icon {
  color: #007bff;
  margin-right: 0.5rem;
}

.profile-pic {
  width: 150px; /* Aumenta o tamanho da imagem */
  height: 150px; /* Aumenta o tamanho da imagem */
  border-radius: 50%;
  object-fit: cover;
  border: none; /* Remove a borda azul ao redor da imagem */
  margin-right: 20px;
}

.profile-pic-wrapper {
  position: relative;
  display: inline-block;
}

/* Novo estilo para gráficos e cartões adicionais */
.stats-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 2rem;
  gap: 20px;
}

.stats-card {
  background-color: #fff;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  padding: 25px;
  text-align: center;
  width: 100%;
  max-width: 280px;
  transition: box-shadow 0.4s ease, transform 0.4s ease;
  position: relative;
}

.stats-card:hover {
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  transform: scale(1.03);
}

.stats-card-title {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
  color: #333;
  font-weight: 700;
}

.stats-card-value {
  font-size: 2.2rem;
  color: #007bff;
  margin-bottom: 0.5rem;
  font-weight: 700;
}

.stats-card-icon {
  font-size: 2.5rem;
  color: #007bff;
  margin-bottom: 1rem;
}

/* Responsividade */
@media (max-width: 768px) {
  .custom-jumbotron h1 {
    font-size: 2.5rem;
  }

  .custom-jumbotron p {
    font-size: 1.1rem;
  }

  .custom-profile-card {
    padding: 20px;
  }

  .custom-profile-card-title {
    font-size: 1.75rem;
  }

  .custom-card-text {
    font-size: 1.1rem;
  }

  .stats-card {
    max-width: 100%;
  }

  .stats-card-title {
    font-size: 1.25rem;
  }

  .stats-card-value {
    font-size: 1.8rem;
  }

  .stats-card-icon {
    font-size: 2rem;
  }

  .profile-pic {
    width: 120px;
    height: 120px;
  }
}

@media (max-width: 480px) {
  .custom-jumbotron h1 {
    font-size: 2rem;
  }

  .custom-jumbotron p {
    font-size: 1rem;
  }

  .custom-profile-card {
    padding: 15px;
  }

  .custom-profile-card-title {
    font-size: 1.5rem;
  }

  .custom-card-text {
    font-size: 1rem;
  }

  .stats-card {
    max-width: 100%;
    margin-bottom: 1rem;
  }

  .stats-card-title {
    font-size: 1.1rem;
  }

  .stats-card-value {
    font-size: 1.5rem;
  }

  .stats-card-icon {
    font-size: 1.5rem;
  }

  .profile-pic {
    width: 100px;
    height: 100px;
  }
}

.profile-layout {
  display: flex;
  justify-content: space-between;
  gap: 20px;
}

.custom-photo-card {
  flex: 1;
  background-color: #fff;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  padding: 20px;
  text-align: center;
}

.custom-photo-card .profile-pic {
  width: 100%;
  height: auto;
  max-width: 300px; /* Ajuste o tamanho máximo conforme necessário */
  border-radius: 50%;
  object-fit: cover;
}

.custom-btn-update {
  font-size: 1.1rem;
  padding: 0.8rem 1.6rem;
  border-radius: 50px;
  background-color: #007bff;
  border: none;
  color: #fff;
  text-transform: uppercase;
  transition: background-color 0.3s ease, transform 0.2s ease;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.custom-btn-update:hover {
  background-color: #0056b3;
  transform: scale(1.05);
}

.custom-btn-update i {
  margin-right: 0.5rem;
}

.custom-profile-card {
  flex: 2;
  background-color: #fff;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  padding: 30px;
  text-align: center;
}

.custom-profile-card-footer {
  margin-top: 2rem;
}

.custom-btn-edit {
  font-size: 1.1rem;
  padding: 0.8rem 1.6rem;
  border-radius: 50px;
  background-color: #28a745;
  border: none;
  color: #fff;
  text-transform: uppercase;
  transition: background-color 0.3s ease, transform 0.2s ease;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.custom-btn-edit:hover {
  background-color: #218838;
  transform: scale(1.05);
}

.custom-btn-edit i {
  margin-right: 0.5rem;
}

/* Badge do Admin */
.admin-header {
  position: relative;
  margin-left: 80px; /* Ajuste para deixar espaço para a navegação lateral */
  margin-top: 20px;
  display: flex;
  flex-direction: column;
}

.admin-medal {
  font-size: 1.4em;
  font-weight: bold;
  color: #FFD700; /* Cor dourada */
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  border: 2px solid #FFD700;
  padding: 10px 20px;
  border-radius: 10px;
  background: rgba(255, 215, 0, 0.1);
  margin-bottom: 10px;
}

.admin-crown {
  font-size: 1.6em;
  font-weight: bold;
  color: #FF4500; /* Cor laranja avermelhada */
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  border: 2px solid #FF4500;
  padding: 10px 20px;
  border-radius: 10px;
  background: rgba(255, 69, 0, 0.1);
}

/* Badge do Admin */
.admin-badge-container {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.admin-badge {
  background-color: #f0f0f0;
  border: 2px solid #FFD700;
  border-radius: 10px;
  padding: 10px;
  font-size: 1.2em;
  color: #FFD700;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  margin-bottom: 10px;
}

.admin-badge-img {
  margin-top: 10px;
}

.admin-badge-icon {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 3px solid #FFD700;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}

/* Ícone do título */
.admin-title-icon {
  display: inline-block;
  margin-left: 10px;
  vertical-align: middle;
}

.admin-title-img {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  vertical-align: middle;
}

/* Responsividade */
@media (max-width: 768px) {
  .profile-layout {
    flex-direction: column;
  }

  .custom-photo-card, .custom-profile-card {
    width: 100%;
  }

  .custom-photo-card .profile-pic {
    max-width: 150px; /* Reduz o tamanho da imagem em dispositivos menores */
  }
}

@media (max-width: 480px) {
  .custom-jumbotron h1 {
    font-size: 2rem;
  }

  .custom-jumbotron p {
    font-size: 1rem;
  }

  .custom-profile-card {
    padding: 15px;
  }

  .custom-profile-card-title {
    font-size: 1.5rem;
  }

  .custom-card-text {
    font-size: 1rem;
  }

  .stats-card {
    max-width: 100%;
    margin-bottom: 1rem;
  }

  .stats-card-title {
    font-size: 1.1rem;
  }

  .stats-card-value {
    font-size: 1.5rem;
  }

  .stats-card-icon {
    font-size: 1.5rem;
  }

  .profile-pic {
    width: 100px;
    height: 100px;
  }
}


</style>


<div class="custom-profile-page">
  <div class="custom-jumbotron">
    <h1 class="display-4">
      Bem-vindo ao seu perfil, <%= user.nome %>!
      <% if (isAdmin) { %>
        <span class="admin-title-icon">
          <img src="/img/terno.png" alt="Administrador" class="admin-title-img">
        </span>
      <% } %>
    </h1>
    <% if (isAdmin) { %>
      <div class="admin-header">
        <div class="admin-medal">
          <i class="fas fa-medal"></i> Administrador
        </div>
        <div class="admin-crown">
          <i class="fas fa-crown"></i> Você está no controle total
        </div>
      </div>
    <% } %>
    <p class="lead">
      <%= isAdmin ? 'Aqui está um resumo do número de clientes agendados:' : 'Você está no controle aqui. Sinta-se à vontade para personalizar seu espaço como preferir.' %>
    </p>
    <% if (isAdmin) { %>
      <p class="lead">Número de clientes agendados: <b><%= numeroClientesAgendados %></b></p>
    <% } %>
  </div>

  <div class="container mt-5">
    <div class="profile-layout">
      <!-- Cartão para a foto de perfil -->
      <div class="custom-photo-card">
        <div class="card-body text-center">
          <img src="<%= fotoUser ? fotoUser.caminho : 'default-avatar.png' %>" alt="Foto de Perfil" class="profile-pic">
          <form action="/perfil/upload-foto" method="POST" enctype="multipart/form-data" class="mt-3">
            <input type="file" name="fotoPerfil" id="fotoPerfil" class="d-none" accept="image/*" onchange="this.form.submit()">
            <button type="button" class="custom-btn-update" onclick="document.getElementById('fotoPerfil').click()">
              <i class="fas fa-camera"></i> Atualizar Foto
            </button>
          </form>
          <% if (isAdmin) { %>
            <div class="admin-badge-container">
              <div class="admin-badge">
                <i class="fas fa-crown"></i> Administrador
              </div>
              <div class="admin-badge-img">
                <img src="/img/cracha.png" alt="Badge" class="admin-badge-icon">
              </div>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Cartão com outras informações -->
      <div class="custom-profile-card">
        <div class="card-body">
          <h2 class="custom-profile-card-title">
            <b><%= user.nome %></b> 
            <% if (isAdmin) { %>
              <div class="admin-title-icon">
                <i class="fas fa-crown" style="font-size: 24px;"></i>
              </div>
            <% } %>
          </h2>
          <hr>
          <p class="custom-card-text">
            <i class="fas fa-phone custom-icon"></i> Telefone: <b><%= user.telefone %></b>
          </p>
          <p class="custom-card-text">
            <i class="fas fa-key custom-icon"></i> Sua senha está segura, <b><%= user.nome %>!</b>
          </p>
        </div>
        <div class="custom-profile-card-footer">
          <a href="/admin/user/edit/<%= user.id %>" class="custom-btn-edit"><i class="fas fa-edit"></i> Editar Perfil</a>
        </div>
      </div>
    </div>
  </div>
</div>

