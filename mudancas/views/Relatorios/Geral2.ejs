<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>
<script>
    // Função para gerar o PDF e compartilhar pelo WhatsApp
    function compartilharWhatsApp() {
        const element = document.querySelector('.report-container');
        const options = {
            margin:       0,
            filename:     'relatorio.pdf',
            image:        { type: 'jpeg', quality: 0.98 },
            html2canvas:  { scale: 2 },
            jsPDF:        { unit: 'in', format: 'letter', orientation: 'portrait' }
        };
        
        html2pdf().from(element).set(options).toPdf().get('pdf').then(function (pdf) {
            // Converte o PDF para Blob
            const blob = pdf.output('blob');

            // Cria uma URL para o Blob
            const fileUrl = URL.createObjectURL(blob);

            // Abre o WhatsApp para compartilhar o PDF
            const link = `https://wa.me/?text=Veja o relatório em anexo&attachment=${fileUrl}`;
            window.open(link, '_blank');
        });
    }

    // Adiciona o evento ao botão
    document.querySelector('.btn-whatsapp').addEventListener('click', compartilharWhatsApp);
</script>
