        margin: 30px 0; /* Ajustar a margem */
    }

    p {
        font-size: 1rem; /* Reduzir o tamanho do parágrafo */
    }
}









.video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh; /* Altera a altura para cobrir toda a área do telemóvel */
    object-fit: cover;
    z-index: -1;
}

.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1;
}


/* Estilo para a imagem da comunidade */
.community-photo {
    display: flex;
    justify-content: center;
