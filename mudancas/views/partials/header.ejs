    <style>
        body {
            background: linear-gradient(to bottom, #e0f7fa, #ffffff); /* Gradiente de fundo suave */
            font-family: 'Arial', sans-serif; /* Fonte mais elegante */
            overflow-x: hidden; /* Evita overflow horizontal */
        }

      
        .navbar {
    position: fixed; /* Manter a navbar fixa no topo */
    top: 0;
    left: 0; /* Adiciona left: 0 para garantir que a navbar comece no lado esquerdo */
    width: 100%; /* Define a largura total da navbar */
    z-index: 1000;
    background: linear-gradient(135deg, #003366, #00509e);
    padding: 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    transition: background 0.3s ease;
    margin: 0; /* Garante que não haja margens externas */
}

@media (min-width: 992px) {
    .navbar {
        height: 160px;
    }
}

.navbar-brand {
    display: flex;
    align-items: center;
    height: 100%;
    color: #ffffff;
    font-size: 2rem; /* Aumenta o tamanho da fonte */
    font-weight: bold;
    transition: color 0.3s ease;
}

.navbar-brand img {
    width: 150px;
    height: auto;
    margin-right: 10px;
}

.navbar-toggler {
    border-color: rgba(255, 255, 255, 0.7);
}

.navbar-toggler-icon {
    background-image: url('data:image/svg+xml;charset=utf8,%3Csvg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30"%3E%3Cpath stroke="rgba(255, 255, 255, 1)" stroke-width="2" d="M4 7h22M4 15h22M4 23h22"/%3E%3C/svg%3E');
}

.nav-link {
    font-weight: bold;
    color: #ffffff;
    margin: 0 15px;
    font-size: 1.2rem;
    position: relative;
    padding: 0.75rem 1rem;
    transition: color 0.3s ease;
}

/* Ajustes responsivos para dispositivos móveis */
@media (max-width: 576px) {
    .navbar-brand {
        font-size: 1.5rem; /* Diminuir o tamanho da fonte no mobile */
    }

    .navbar-brand img {
        width: 100px; /* Reduzir o tamanho do logo no mobile */
    }

    .nav-link {
        font-size: 1rem; /* Diminuir o tamanho da fonte dos links no mobile */
        padding: 0.5rem 0.75rem; /* Ajustar o padding no mobile */
        margin: 0 5px;
    }

    .navbar {
        height: auto; /* Ajusta a altura da navbar no mobile */
        padding: 10px 0;
    }
}


.btn-custom {
    margin: 10px; /* Margem entre os botões */
    padding: 12px 24px; /* Espaçamento interno dos botões */
    font-size: 1.5rem; /* Tamanho da fonte dos botões */
    border-radius: 5px; /* Bordas arredondadas */
    transition: transform 0.3s ease, background-color 0.3s ease; /* Transição suave */
    display: inline-flex; /* Para alinhar ícones e texto */
    align-items: center; /* Centraliza verticalmente */
    text-decoration: none; /* Remove sublinhado */
}

.btn-enter {
    background-color: #00509e; /* Azul mais escuro */
    color: #ffffff; /* Cor do texto */
}

.btn-register {
    background-color: #0080ff; /* Azul mais claro */
    color: #ffffff; /* Cor do texto */
}

.btn-custom:hover {
    transform: scale(1.1); /* Efeito de aumento ao passar o mouse */
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); /* Sombra ao passar o mouse */
}

.btn-custom i {
    margin-right: 8px; /* Espaço entre ícone e texto do botão */
}

@media (max-width: 576px) { /* Para dispositivos móveis */
    .btn-custom {
        padding: 8px 16px; /* Reduzir o padding */
        font-size: 1.2rem; /* Diminuir o tamanho da fonte */
    }
}












.content {
    position: relative;
    z-index: 2;
    transition: margin-top 0.3s ease;
    padding-top: 80px;
    text-align: center;
    flex: 1; /* Permite que a área de conteúdo cresça para ocupar o espaço disponível */
